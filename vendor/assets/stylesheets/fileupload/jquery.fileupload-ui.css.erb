.ui-button input {
  position: absolute;
  top: 0;
  right: 0;
  margin: 0;
  border: solid transparent;
  border-width: 0 0 100px 200px;
  opacity: 0;
  filter: alpha(opacity=0);
  -o-transform: translate(250px, -50px) scale(1);
  -moz-transform: translate(-300px, 0) scale(4);
  direction: ltr;
  cursor: pointer;
}

.fileinput-button {
  overflow: hidden;
  width: 400px;
  margin: 0 auto;
  display: block;
  color: #666666;
  padding: 1px 0;
}
  .fileinput-button:hover {
    color: #c77405;
  }
  .fileinput-button .ui-button-text {
    padding: 0;
  }
  .fileinput-button span.icon {
    display: block;
    float: left;
    font-size: 350%;
    margin: 4px 10px 0 70px;
  }
  .fileinput-button span.label {
    display: block;
    float: left;
    overflow: hidden;
    text-align: left;
    font-family: 'proxima-nova-soft-1','proxima-nova-soft-2', 'Helvetica Neue',HelveticaNeue,sans-serif;
    margin: 20px 0 0;
    line-height: 1.1;
    font-size: 120%;
    padding: 0 0 1px;
  }
  .fileinput-button span.line1 {
    display: block;
    font-weight: 700;
  }
  .fileinput-button span.line2 {
    display: block;
    font-weight: 400;
    font-size: 95%;
  }
  
#fileupload.dragover .fileinput-button {
  background: #ffffff;
  border: 2px dashed #cccccc;
  width: 398px;
  padding: 0;
}
  #fileupload.dragover .fileinput-button span.label {
    color: #cccccc;
    }
  #fileupload.dragover .fileinput-button span.icon {
    color: #cccccc;
    }

/* Fix for IE 6: */
*html .fileinput-button {
  padding: 2px 0;
}
/* Fix for IE 7: */
*+html .fileinput-button {
  padding: 2px 0;
}

.fileupload-buttonbar .ui-button {
  vertical-align: middle;
}

.ui-progressbar {
  width: 200px;
  height: 20px;
}

.ui-progressbar-value {
  background: url('<%= asset_path 'jquery-ui/pbar-ani.gif' %>');
}

.fileupload-progressbar {
  width: 400px;
  margin: 10px auto;
}

table.files {
  margin: 10px auto;
  border-collapse: collapse;
}

  .files td {
    padding: 5px;
    border-spacing: 5px;
    vertical-align: middle
  }

  .files td canvas {
    -webkit-box-shadow: 0 2px 6px rgba(0,0,0,0.3);
    -moz-box-shadow: 0 2px 6px rgba(0,0,0,0.3);
  }
  
  .files .preview {
    text-align: center;
  }

  .files .name {
    padding: 0 10px;
    font-size: 90%;
  }

  .files .size {
    padding: 0 10px 0 0;
    text-align: right;
    white-space: nowrap;
    font-size: 90%;
  }

.gallery-dialog {
  text-align: center;
}

.loading {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 32px;
  height: 32px;
  margin: -16px 0 0 -16px;
  background: url('<%= asset_path 'jquery-ui/loading.gif' %>');
  z-index: 9999;
}

/* IE 6: */
*html .loading {
  position: absolute;
}