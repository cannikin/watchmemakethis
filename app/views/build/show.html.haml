%h2.build_title= link_to @build.name, build_path(@site.path, @build.path)

- if logged_in? and current_user.is_an_owner?
  #new_image
    = render :partial => 'shared/upload'

%ul#build_images
  = render :partial => 'image', :locals => { :image => Image.new, :blank => true }
  - if @build.images.any?
    - @build.images.each do |image| 
      = render :partial => 'image', :locals => { :image => image }
  - else
    - if logged_in? and current_user.is_an_owner?
      = render 'new_build_intro'
    - else
      .none No images for this build yet, check back soon!
    
= content_for :head do
  = stylesheet_link_tag 'jquery.fancybox.css'
  
= content_for :body_end do
  = javascript_include_tag 'jquery.fancybox.min.js'
  :javascript
    $(document).ready(function() {
      WatchMeMakeThis.fancyboxify();
    });
  - if !logged_in? or !current_user.is_an_owner?
    :javascript
      WatchMeMakeThis.checkForNewImages('#{request.path}');