- if logged_in? and current_user.is_an_owner?
  #new_image
    = render :partial => 'shared/upload', :locals => { :action => build_upload_path, :on_complete => "$('#build_images').prepend(data).find('li').first().delay(1000).fadeIn(500); WatchMeMakeThis.fancyboxify();" }

%ul#build_images
  - @build.images.each do |image| 
    = render :partial => 'image', :locals => { :image => image }
  
= content_for :head do
  = stylesheet_link_tag 'jquery.fancybox.css'
  
= content_for :body_end do
  = javascript_include_tag 'jquery.fancybox.min.js'
  :javascript
    $(document).ready(function() {
      WatchMeMakeThis.fancyboxify();
    });
      