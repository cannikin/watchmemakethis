- hide = hide.nil? ? false : hide

%li[image]{:style => "#{'display:none' if hide}"}
  = link_to(image_tag(image.url(:small), compute_width_height(image)), 
                      image.url(:large), 
                      :title => "#{image.description}", 
                      :rel => "build_group",
                      :class => 'thumb')
                      
  %span.uploaded 
    Uploaded 
    %time(datetime="#{image.created_at}")= time_ago_in_words(image.created_at)
    ago
  - if logged_in?
    %ul.actions
      %li= link_to('Delete', destroy_image_path(params[:site_path], params[:build_path], image.id), :class => 'delete', :remote => true, :method => :delete, :confirm => "Are you sure you want to delete this image? There's no going back!")
    