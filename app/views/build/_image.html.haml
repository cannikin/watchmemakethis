- hide = hide.nil? ? false : hide
- blank = blank.nil? ? false : blank

%li[image]{:style => "#{'display:none' if hide or blank}"}
  - if blank
    = link_to(image_tag('blank.gif'), '#', :class => 'thumb')
  - else
    = link_to(image_tag(image.url(:small), compute_width_height(image)), 
                        image.url(:large), 
                        :title => "#{image.description}", 
                        :rel => "build_group",
                        :class => 'thumb')
  %p.description= image.description
  %span.added 
    Added 
    - if blank
      %time
    - else
      %time(datetime="#{image.created_at}")= time_ago_in_words(image.created_at)
    ago
  - if logged_in?
    %ul.actions
      - if blank
        - link = '#'
      - else
        - link = destroy_image_path(params[:site_path], params[:build_path], image.id)
      %li= link_to('D', link, :class => 'delete icon', :remote => true, :method => :delete, :title => 'Delete', :confirm => "Are you sure you want to delete this image? There's no going back!")
    