!!!
%html
  %head
    %title
      = @page_title + " @ " if @page_title
      Watch Me Make This
    = stylesheet_link_tag 'reset', 'shared'
    = yield :head
    = csrf_meta_tag

  %body{:id => "#{controller.controller_name}-#{controller.action_name}"}
    = render 'shared/flash', :flash => flash
    = yield
    
    %footer
      This site made possible by
      = link_to 'Watch Me Make This', 'http://watchmemakethis.com'
    
    = javascript_include_tag :defaults
    = yield :body_end
    
    = render :partial => 'shared/debug' if Rails.env.development?
      