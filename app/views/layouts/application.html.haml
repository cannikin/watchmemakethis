%html
  %head
    %title Admin | Watch Me Make This
    = stylesheet_link_tag 'reset', 'fonts', 'shared'
    = yield :head
    = csrf_meta_tag

  %body{:id => "#{controller.controller_name}-#{controller.action_name}"}
    = render 'shared/flash', :flash => flash
    = yield
    
    = javascript_include_tag :defaults
    = yield :body_end
    
    = render :partial => 'shared/debug' if Rails.env.development?
    