%section#intro
  .container
    %h2 Sign Up
    
= render 'shared/flash', :flash => flash

= render :partial => 'site/form', :locals => { :user => @user, :site => @site, :submit_path => signup_go_path, :button_label => 'Create Your Account!' }

= content_for :body_end do
  :javascript
    $(document).ready(function() {
      WatchMeMakeThis.autoFillFields($('#site_name'), [$('#site_path')]);
      $('#user_email').focus();
    });
    