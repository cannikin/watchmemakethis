%section#intro
  .container
    %h2 Log In
    
= render 'shared/flash', :flash => flash

= form_tag login_go_path, :id => 'login_form' do
  = label_tag :email
  = text_field_tag :email, '', :tabindex => 1
  .password
    = label_tag :password
    %span.forgot= link_to '(Forgot?)', forgot_password_path
    = password_field_tag :password, '', :tabindex => 2
  = submit_tag 'Log In', :class => 'button blue large', :tabindex => 3
  
= content_for :body_end do
  :javascript
    $(document).ready(function() {
      $('#email').focus();
    });
    