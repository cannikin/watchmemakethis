$background_main: #336699
$background_signup: #469c34
$background_login: #b15e3b

body.marketing
  padding: 0
  
  strong
    font-weight: 600
  
  .container
    width: 980px
    margin: 0 auto
    
  header
    color: #ffffff
    padding: 20px
    overflow: hidden
    background-color: $background_main
    a 
      text-decoration: none
      color: #ffffff !important
    h1
      font-weight: 100
      font-size: 200%
      float: left
      background-color: darken($background_main, 10%)
      padding: 10px 20px
      -webkit-border-radius: 8px
      -moz-border-radius: 8px
    nav
      float: right
      ul
        li
          display: block
          float: left
          margin: 10px
          a:hover
            text-decoration: underline
          a.button
            display: inline
            margin: 0
            text-decoration: none
  
  section#intro
    padding: 20px 0 0
    background-color: #336699
    overflow: hidden
    border-bottom: 1px solid #333333
    .container
      background: transparent url('<%= asset_path 'binoculars.png' %>') 0px 0 no-repeat
      padding: 0 0 40px 80px
      overflow: hidden
    .text
      width: 500px
      float: right
      text-align: center
    h2
      font-family: 'Helvetica Neue',HelveticaNeue,sans-serif
      color: #ffffff
      font-size: 420%
      font-weight: 700
      line-height: 0.9
      letter-spacing: -0.05em
      text-align: left
    p
      margin: 40px 0 20px
      text-align: left
      color: #b3cce6
      font-size: 110%
      font-weight: 300
      line-height: 1.3
      
  section#more_info
    background-color: #dddddd
    overflow: hidden
    padding: 30px 0
    border-top: 1px solid #ffffff
    section
      width: 30%
      margin: 0 40px 0 0
      float: left
      &:last-child
        margin: 0
      h3
        font-size: 160%
        font-weight: 600
        margin: 0 0 10px
        color: #469c34
        text-shadow: 0 1px #ffffff
      p
        line-height: 1.4
        font-size: 120%
        
  footer
    position: relative
    margin: 80px 0 0
        

body#signup-new, body#signup-create
  header, section#intro
    background-color: $background_signup
    .container
      background-image: none
    h1
      background-color: darken($background_signup, 10%)
      
body#session-new, body#session-create
  header, section#intro
    background-color: $background_login
    .container
      background-image: none
    h1
      background-color: darken($background_login, 10%)
    
