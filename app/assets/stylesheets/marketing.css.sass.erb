$background_main: #336699
$background_signup: #469c34
$background_login: #b15e3b
$background_help: #ab3942

body.marketing
  padding: 0
  overflow: auto
  background-color: #efefef
  
  strong
    font-weight: 600
  
  .container
    width: 980px
    margin: 0 auto
    
  header
    color: #ffffff
    padding: 20px
    overflow: hidden
    background-color: $background_main
    a 
      text-decoration: none
      color: #ffffff !important
    h1
      font-weight: 100
      font-size: 200%
      float: left
      background-color: darken($background_main, 10%)
      padding: 10px 20px
      -webkit-border-radius: 8px
      -moz-border-radius: 8px
    nav
      float: right
      margin-right: 20px
      ul
        li
          display: block
          float: left
          margin: 6px
          padding: 10px 20px
          -webkit-border-radius: 6px
          -moz-border-radius: 6px
          font-size: 120%
          background-color: darken($background_main, 5%)
          a:hover
            text-decoration: underline
          a.button
            display: inline
            margin: 0
            text-decoration: none
  h2
    font-family: 'Helvetica Neue',HelveticaNeue,sans-serif
    color: #ffffff
    font-size: 420%
    font-weight: 700
    line-height: 0.9
    letter-spacing: -0.04em
    text-align: left
    
  section
    .container
      h3
        color: #333333
        font-family: 'Helvetica Neue',HelveticaNeue,sans-serif
        font-size: 300%
        letter-spacing: -0.04em
        font-weight: 700
        line-height: 1.1
  
  section#intro
    background-color: #336699
    overflow: hidden
    border-bottom: 1px solid #333333
    .container
      background: transparent url('<%= asset_path 'home/binoculars.jpg' %>') 0 20px no-repeat
      padding: 0 30px 30px
      overflow: hidden
    .text
      width: 500px
      float: right
      text-align: center
      p
        margin: 30px 0 20px 40px
        text-align: left
        color: transparentize(#ffffff, 0.5)
        font-size: 110%
        font-weight: 300
        line-height: 1.3
        strong
          color: transparentize(#ffffff, 0.25)
      a.button
        margin: 0
        width: 160px
      
  section#more_info
    overflow: hidden
    border-top: 1px solid #ffffff
    color: #444444
    .container
      width: 920px
      margin: 0 auto
      padding: 40px 30px
      overflow: hidden
      background-color: #ffffff
      border-left: 1px solid #e0e0e0
      border-right: 1px solid #e0e0e0
      strong
        color: #000000
      section
        width: 30%
        margin: 0 40px 0 0
        float: left
        &:last-child
          margin: 0
        h3
          font-family: 'proxima-nova-1','proxima-nova-2',sans-serif
          font-size: 150%
          font-weight: 600
          letter-spacing: 0
          margin: 0 0 10px
          color: #469c34
        p
          line-height: 1.4
          font-size: 120%
          
  section#screen
    .container
      background: #f6f6f6 url('<%= asset_path 'home/section_shadow.png' %>') 0 -1px no-repeat
      width: 950px
      margin: 0 auto
      padding: 50px 0 50px 30px
      overflow: hidden
      border-left: 1px solid #e0e0e0
      border-right: 1px solid #e0e0e0
      .screen
        float: right
        width: 480px
        height: 492px
        background: transparent url('<%= asset_path 'home/screen.jpg' %>') top center no-repeat
      h3
        color: #444444
        font-family: 'Helvetica Neue',HelveticaNeue,sans-serif
        font-size: 200%
        letter-spacing: -0.04em
        float: left
        width: 430px
        margin: 0 0 30px
        font-weight: 700
        line-height: 1.1
      ul
        float: left
        overflow: hidden
        width: 455px
        clear: left
        margin: 0 0 20px -10px
        li
          color: #333333
          padding: 15px 0 40px 115px
          font-weight: 300
          strong
            color: #000000
          a
            display: block
            font-weight: 600
            margin: 8px 0 0
          &#twitter
            background: transparent url('<%= asset_path 'home/twitter.png' %>') top left no-repeat
          &#email
            background: transparent url('<%= asset_path 'home/email.png' %>') top left no-repeat
          &#upload
            background: transparent url('<%= asset_path 'home/photos.png' %>') top left no-repeat
          
  section#demo
    .container
      background: #f6f6f6 url('<%= asset_path 'home/section_shadow.png' %>') 0 -1px no-repeat
      width: 980px
      margin: 0 auto
      overflow: hidden
      padding: 50px 0
      overflow: hidden
      border-left: 1px solid #e0e0e0
      border-right: 1px solid #e0e0e0
      text-align: center
      h3
        color: #333333
        font-family: 'Helvetica Neue',HelveticaNeue,sans-serif
        font-size: 300%
        letter-spacing: -0.04em
        font-weight: 700
        line-height: 1.1
        margin: 0 0 40px
      iframe
        width: 853px
        margin: 0 auto
        border: 25px solid #ffffff
        -webkit-box-shadow: 0 10px 10px rgba(0,0,0,0.2)
  
  section#examples
    .container
      background: #f6f6f6 url('<%= asset_path 'home/section_shadow.png' %>') 0 -1px no-repeat
      width: 980px
      margin: 0 auto
      overflow: hidden
      padding: 50px 0
      overflow: hidden
      border-left: 1px solid #e0e0e0
      border-right: 1px solid #e0e0e0
      text-align: center
      ul
        margin-top: 30px
        li
          display: inline-block
          float: left
          width: 250px
          margin: 0 13px
          img
            height: 175px
            border: 15px solid #ffffff
            -webkit-box-shadow: 0 10px 10px rgba(0,0,0,0.2)
          &.half
            width: 62px
          &.half.left
            margin: 0 14px 0 0
            img
              border-left: none
          &.half.right
            margin: 0 0 0 14px
            img
              border-right: none
          h4
            font-size: 120%
            margin: 10px 0 4px
          p
            font-weight: 100
            line-height: 1.3
        
            
  .signup
    clear: both
    padding: 30px 0 0
    a.button
      display: block
      clear: left
      margin: 0 auto
      width: 160px
            
  footer
    .container
      width: 980px
      margin: 0 auto
      overflow: hidden
      padding: 40px 0
      overflow: hidden
      border-left: 1px solid #e0e0e0
      border-right: 1px solid #e0e0e0
      text-align: center
      font-size: 120%
      color: #666666
      a
        color: #666666
        
        
// help pages
.container.help
  p.hello
    font-size: 150%
    margin: 20px 0
    line-height: 1.4
  h3
    font-size: 150%
    font-weight: 600
    color: #666666
    margin: 0 0 20px
  ul
    font-size: 120%
    margin: 0 20px 40px
    padding: 0 20px
    line-height: 1.5
    color: $background_help
    li
      list-style-type: disc
  dl
    dt
      font-size: 130%
      color: $background_help
      margin: 0
    dd
      font-size: 110%
      line-height: 1.4
      margin: 0 0 40px
      p
        margin: 1em 0
        img
          -webkit-box-shadow: 0 10px 10px rgba(0,0,0,0.2)
      ol, ul
        margin: 0 20px
        padding: 0 20px
        font-size: 100%
      ol li
        list-style-type: decimal
      
body#marketing-index
  footer
    .container
      background: #f6f6f6 url('<%= asset_path 'home/section_shadow.png' %>') 0 -1px no-repeat

body#signup-new, body#signup-create
  header, section#intro
    background-color: $background_signup
    .container
      background-image: none
    h1
      background-color: darken($background_signup, 10%)
    nav
      li
        background-color: darken($background_signup, 5%)
      
body#session-new, body#session-create
  header, section#intro
    background-color: $background_login
    .container
      background-image: none
    h1
      background-color: darken($background_login, 10%)
    nav
      li
        background-color: darken($background_login, 5%)
          
body#marketing-help
  header, section#intro
    background-color: $background_help
    .container
      background-image: none
    h1
      background-color: darken($background_help, 10%)
    nav
      li
        background-color: darken($background_help, 5%)
  a
    color: $background_help